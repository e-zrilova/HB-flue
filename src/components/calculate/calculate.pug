      svg.calculate__bg
        use(href='assets/images/sprite.svg#blob-carrot')
      img.calculate__img(src='assets/images/calculator.png' alt='Изображение калькулятора')
      svg.calculate__item.calculate__item--1
        use(href='assets/images/sprite.svg#d-1-img')
      svg.calculate__item.calculate__item--2
        use(href='assets/images/sprite.svg#d-1-img')
      svg.calculate__item.calculate__item--3
        use(href='assets/images/sprite.svg#triangle')
